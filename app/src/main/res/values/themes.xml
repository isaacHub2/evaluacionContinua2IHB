<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ec2isaac" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.Ec2isaac.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/blue_400</item>
        <item name="android:theme">@style/Theme.Ec2isaac</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Ec2isaac.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Widget.Ec2isaac.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextAppearance.Ec2isaac.TextInputLayout.HintText</item>
        <item name="hintTextColor">?attr/colorSecondaryVariant</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextAppearance.Ec2isaac.Title" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearance.Ec2isaac.TextBody" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>